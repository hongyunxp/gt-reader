<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<TextView android:id="@+id/textView_textSize"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/settingTitle_textSize"
		/>
		
	<EditText android:id="@+id/editText_testSize"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
	
	<TextView android:id="@+id/textView_textColor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/settingTitle_textColor"
		/>
		
	<EditText android:id="@+id/editText_textColor"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
		
	<TextView android:id="@+id/textView_viewerBGColor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/settingTitle_viewerBGColor"
		/>
		
	<EditText android:id="@+id/editText_viewerBGColor"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
	
</LinearLayout>